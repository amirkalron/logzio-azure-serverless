{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "sites_logzioFunctionApp_name": {
            "defaultValue": "[concat('logzioFunctionApp', uniqueString(resourceGroup().id))]",
            "type": "String"
        },
        "storageAccounts_LogzioFailSafe_name": {
            "defaultValue": "[concat('logziofs',uniqueString(resourceGroup().id))]",
            "type": "String"
        },
        "namespaces_LogzioNS_name": {
            "defaultValue": "[concat('LogzioNS', uniqueString(resourceGroup().id))]",
            "type": "String"
        },
        "serverfarms_LogzioSP_name": {
            "defaultValue": "[concat('logzioAppServicePlan', uniqueString(resourceGroup().id))]",
            "type": "String"
        },
        "storageAccounts_LogzioAppStorage_name": {
            "defaultValue": "[concat('logzapplogs', uniqueString(resourceGroup().id))]",
            "type": "String"
        },
        "eventhubs_insights_operational_logs_name": {
            "defaultValue": "insights-operational-logs",
            "type": "String"
        },
        "AuthorizationRules_LogzioSharedAccessKey_name": {
            "defaultValue": "LogzioSharedAccessKey",
            "type": "String"
        },
        "consumergroups_$Default_name": {
            "defaultValue": "LogzioConsumerGroup",
            "type": "String"
        },
        "repoURL": {
            "defaultValue": "https://github.com/logzio/logzio-azure-serverless.git",
            "type": "String"
        },
        "branch": {
            "defaultValue": "master",
            "type": "String"
        },
        "LogzioHost": {
            "defaultValue": "listener.logz.io",
            "type": "String"
        },
        "LogzioToken": {
            "defaultValue": "Your Logzio account token",
            "type": "String"
        }
    },
    "variables": {},
    "resources": [{
            "type": "Microsoft.EventHub/namespaces",
            "sku": {
                "name": "Standard",
                "tier": "Standard",
                "capacity": 1
            },
            "name": "[parameters('namespaces_LogzioNS_name')]",
            "apiVersion": "2017-04-01",
            "location": "[resourceGroup().location]",
            "tags": {},
            "scale": null,
            "properties": {
                "isAutoInflateEnabled": true,
                "maximumThroughputUnits": 20,
                "provisioningState": "Succeeded"
            },
            "dependsOn": []
        },
        {
            "type": "Microsoft.Storage/storageAccounts",
            "sku": {
                "name": "Standard_RAGRS",
                "tier": "Standard"
            },
            "kind": "Storage",
            "name": "[parameters('storageAccounts_LogzioFailSafe_name')]",
            "apiVersion": "2017-06-01",
            "location": "[resourceGroup().location]",
            "scale": null,
            "properties": {
                "supportsHttpsTrafficOnly": false,
                "encryption": {
                    "services": {
                        "file": {
                            "enabled": true
                        },
                        "blob": {
                            "enabled": true
                        }
                    },
                    "keySource": "Microsoft.Storage"
                }
            },
            "dependsOn": []
        },
        {
            "type": "Microsoft.Storage/storageAccounts",
            "sku": {
                "name": "Standard_LRS",
                "tier": "Standard"
            },
            "kind": "Storage",
            "name": "[parameters('storageAccounts_LogzioAppStorage_name')]",
            "apiVersion": "2017-06-01",
            "location": "[resourceGroup().location]",
            "scale": null,
            "properties": {
                "encryption": {
                    "services": {
                        "file": {
                            "enabled": true
                        },
                        "blob": {
                            "enabled": true
                        }
                    },
                    "keySource": "Microsoft.Storage"
                }
            },
            "dependsOn": []
        },
        {
            "type": "Microsoft.Web/serverfarms",
            "sku": {
                "name": "Y1",
                "tier": "Dynamic",
                "size": "Y1",
                "family": "Y",
                "capacity": 0
            },
            "kind": "functionapp",
            "name": "[parameters('serverfarms_LogzioSP_name')]",
            "apiVersion": "2016-09-01",
            "location": "[resourceGroup().location]",
            "scale": null,
            "properties": {
                "name": "[parameters('serverfarms_LogzioSP_name')]",
                "workerTierName": null,
                "adminSiteName": null,
                "hostingEnvironmentProfile": null,
                "perSiteScaling": false,
                "reserved": false,
                "targetWorkerCount": 0,
                "targetWorkerSizeId": 0
            },
            "dependsOn": []
        },
        {
            "type": "Microsoft.Web/sites",
            "kind": "functionapp",
            "name": "[parameters('sites_logzioFunctionApp_name')]",
            "apiVersion": "2016-08-01",
            "location": "[resourceGroup().location]",
            "scale": null,
            "properties": {
                "enabled": true,
                "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', parameters('serverfarms_LogzioSP_name'))]",
                "reserved": false,
                "siteConfig": {
                    "appSettings": [{
                            "name": "FUNCTIONS_EXTENSION_VERSION",
                            "value": "~1"
                        },
                        {
                            "name": "Project",
                            "value": "eventHubFunction/"
                        },
                        {
                            "name": "AzureWebJobsStorage",
                            "value": "[concat('DefaultEndpointsProtocol=https;AccountName=', parameters('storageAccounts_LogzioAppStorage_name'), ';AccountKey=', listKeys(resourceId('Microsoft.Storage/storageAccounts', parameters('storageAccounts_LogzioAppStorage_name')),'2015-05-01-preview').key1)]"
                        },
                        {
                            "name": "AzureWebJobsDashboard",
                            "value": "[concat('DefaultEndpointsProtocol=https;AccountName=', parameters('storageAccounts_LogzioAppStorage_name'), ';AccountKey=', listKeys(resourceId('Microsoft.Storage/storageAccounts', parameters('storageAccounts_LogzioAppStorage_name')),'2015-05-01-preview').key1)]"
                        },
                        {
                            "name": "LogzioHost",
                            "value": "[parameters('LogzioHost')]"
                        },
                        {
                            "name": "AzureEventHubConnectionString",
                            "value": "[listkeys(resourceId('Microsoft.EventHub/namespaces/authorizationRules', parameters('namespaces_LogzioNS_name'),parameters('AuthorizationRules_LogzioSharedAccessKey_name')), '2017-04-01').primaryConnectionString]"
                        },
                        {
                            "name": "StorageConnectionString",
                            "value": "[concat('DefaultEndpointsProtocol=https;AccountName=', parameters('storageAccounts_LogzioFailSafe_name'), ';AccountKey=', listKeys(resourceId('Microsoft.Storage/storageAccounts', parameters('storageAccounts_LogzioFailSafe_name')),'2015-05-01-preview').key1,';EndpointSuffix=core.windows.net')]"
                        },
                        {
                            "name": "LogzioToken",
                            "value": "[parameters('LogzioToken')]"
                        }
                    ]
                }
            },
            "resources": [{
                "apiVersion": "2015-08-01",
                "name": "web",
                "type": "sourcecontrols",
                "dependsOn": [
                    "[resourceId('Microsoft.Web/sites/', parameters('sites_logzioFunctionApp_name'))]"
                ],
                "properties": {
                    "RepoUrl": "[parameters('repoURL')]",
                    "branch": "[parameters('branch')]",
                    "IsManualIntegration": true
                }
            }],
            "dependsOn": [
                "[resourceId('Microsoft.Web/serverfarms', parameters('serverfarms_LogzioSP_name'))]",
                "[resourceId('Microsoft.Storage/storageAccounts', parameters('storageAccounts_LogzioAppStorage_name'))]",
                "[concat('Microsoft.EventHub/namespaces/', parameters('namespaces_LogzioNS_name'))]"
            ]
        },
        {
            "type": "Microsoft.EventHub/namespaces/AuthorizationRules",
            "name": "[concat(parameters('namespaces_LogzioNS_name'), '/', parameters('AuthorizationRules_LogzioSharedAccessKey_name'))]",
            "apiVersion": "2017-04-01",
            "location": "[resourceGroup().location]",
            "scale": null,
            "properties": {
                "rights": [
                    "Listen",
                    "Manage",
                    "Send"
                ]
            },
            "dependsOn": [
                "[resourceId('Microsoft.EventHub/namespaces', parameters('namespaces_LogzioNS_name'))]"
            ]
        },
        {
            "type": "Microsoft.EventHub/namespaces/eventhubs",
            "name": "[concat(parameters('namespaces_LogzioNS_name'), '/', parameters('eventhubs_insights_operational_logs_name'))]",
            "apiVersion": "2017-04-01",
            "location": "[resourceGroup().location]",
            "scale": null,
            "properties": {
                "messageRetentionInDays": 7,
                "partitionCount": 4,
                "status": "Active",
                "partitionIds": [
                    "0",
                    "1",
                    "2",
                    "3"
                ]
            },
            "dependsOn": [
                "[resourceId('Microsoft.EventHub/namespaces', parameters('namespaces_LogzioNS_name'))]"
            ]
        },
        {
            "type": "Microsoft.EventHub/namespaces/eventhubs/consumergroups",
            "name": "[concat(parameters('namespaces_LogzioNS_name'), '/', parameters('eventhubs_insights_operational_logs_name'), '/', parameters('consumergroups_$Default_name'))]",
            "apiVersion": "2017-04-01",
            "location": "[resourceGroup().location]",
            "scale": null,
            "properties": {},
            "dependsOn": [
                "[resourceId('Microsoft.EventHub/namespaces', parameters('namespaces_LogzioNS_name'))]",
                "[resourceId('Microsoft.EventHub/namespaces/eventhubs', parameters('namespaces_LogzioNS_name'), parameters('eventhubs_insights_operational_logs_name'))]"
            ]
        }
    ]
}